{{#section 'header'}}
    <link rel="stylesheet" href="/public/css/search-result.css">
{{/section}}
 
{{!-- ----------------------------------------------- --}}
<div class="container">
    <div style="width: 90%; margin: 0 auto;">
            <div>
                <p>Filter By</p>
                <a href="/search/cat/{{this.id}}?sort=rate"><button type="button" class="btn btn-light border-dark">Highest Rated</button></a>
                <a href="/search/cat/{{this.id}}?sort=price"><button type="button" class="btn btn-light border-dark">Cheapest Courses</button></a>
            </div>

            {{#each courses}}
            <div class="search-result-item">
                <div class="search-result-item-body">
                    <div class="row">
                        <div class="col-3">
                            <a href="#"><img class="img-fluid" src="{{this.ava_link}}" width="170" height="100"></a>
                        </div>
                        <div class="col-7">
                            <h4 class="search-result-item-heading"><a href="#">{{this.title}}</a></h4>
                            <span class="field">{{this.cat_title}} | </span>
                            <span class="lecturer">{{this.fullname}}</span>
                            <div>{{formatRate this.rate}} ‚≠ê ({{this.num_rate}} rating)</div>
                        </div>
                        <div class="col">
                            <span class="badge bg-warning fw-bold">Bestseller</span>
                            <span class="badge bg-danger fw-bold">New</span>
                            <h3>
                                {{#if this.discount}}
                                    ${{discountPrice this.price this.discount}}&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{this.discount}}% off
                                {{else}}
                                    ${{this.price}}
                                {{/if}}
                            </h3>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}

            <nav class="pagination-margin">
                <ul class="pagination pagination-lg justify-content-center">
                    <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item"><a class="page-link active" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
            </nav>
    </div>
</div>