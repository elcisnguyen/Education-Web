        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" id="feedback-tab" data-bs-toggle="tab" href="#feedback" role="tab" aria-controls="feedback" aria-selected="false"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chat-fill" viewBox="0 0 16 16">
  <path d="M8 15c4.418 0 8-3.134 8-7s-3.582-7-8-7-8 3.134-8 7c0 1.76.743 3.37 1.97 4.6-.097 1.016-.417 2.13-.771 2.966-.079.186.074.394.273.362 2.256-.37 3.597-.938 4.18-1.234A9.06 9.06 0 0 0 8 15z"/>
</svg> Feedback</a>
        </li>
    </ul>
    <div class="tab-content p-4" id="myTabContent">
        <div class="tab-pane fade show active" id="description" role="tabpanel" aria-labelledby="description-tab">
            {{{course.full_description}}}
        </div>
        <div class="tab-pane fade" id="syllabus" role="tabpanel" aria-labelledby="syllabus-tab">
            <ul>
                {{#each syllabus}}
                <li>
                    <h6>{{this.title}}</h6>
                    {{#if ../user}}
                        {{#if ../is_purchased}}
                            <a href="#{{this.randomID}}" data-bs-toggle="modal" data-target="#{{this.randomID}}">View</a>

                            <div class="modal fade" id="{{this.randomID}}" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog modal-xl">
                                    <div class="modal-content">
                                        <div class="vid">
                                            <iframe width="560" height="315" src="{{this.vid_link}}" allowfullscreen=""></iframe>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {{else}}
                            {{#isPreviewable @index}}
                                <a href="#{{this.randomID}}" data-bs-toggle="modal" data-target="#{{this.randomID}}">View</a>

                                <div class="modal fade" id="{{this.randomID}}" tabindex="-1" aria-hidden="true">
                                    <div class="modal-dialog modal-xl">
                                        <div class="modal-content">
                                            <div class="vid">
                                                <iframe width="560" height="315" src="{{this.vid_link}}" allowfullscreen=""></iframe>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {{/isPreviewable}}
                        {{/if}}
                    {{else}}
                        {{#isPreviewable @index}}
                            <a href="#{{this.randomID}}" data-bs-toggle="modal" data-target="#{{this.randomID}}">View</a>

                            <div class="modal fade" id="{{this.randomID}}" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog modal-xl">
                                    <div class="modal-content">
                                        <div class="vid">
                                            <iframe width="560" height="315" src="{{this.vid_link}}" allowfullscreen=""></iframe>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {{/isPreviewable}}
                    {{/if}}
                    <hr>
                </li>
                {{/each}}
            </ul>
        </div>
        <div class="tab-pane fade" id="feedback" role="tabpanel" aria-labelledby="feedback-tab">
            <div class="row">
                <div class="col-auto align-self-center">
                    Your rating:
                </div>
                <div class="col stars" style="display:flex">
                    <form action=""><input class="star star-5" id="star-5" type="radio" name="star" /> <label class="star star-5" for="star-5"></label> <input class="star star-4" id="star-4" type="radio" name="star" /> <label class="star star-4" for="star-4"></label> <input class="star star-3" id="star-3" type="radio" name="star" /> <label class="star star-3" for="star-3"></label> <input class="star star-2" id="star-2" type="radio" name="star" /> <label class="star star-2" for="star-2"></label> <input class="star star-1" id="star-1" type="radio" name="star" /> <label class="star star-1" for="star-1"></label> </form>
                </div>
            </div>

            <div class="pb-2">
                    <div class="d-flex flex-row align-items-start">
                        <textarea class="form-control ml-1 shadow-none textarea" placeholder="What do you think about this course?"></textarea>
                    </div>
                    <div class="mt-2 text-right">
                        <button class="btn" type="button shadow-none" style="background-color: #e74c3c; color: #fff">Post comment</button>
                        {{!-- <button class="btn btn-outline-primary btn ml-1 shadow-none" type="button">Cancel</button> --}}
                    </div>
            </div>

            {{#each feedback}}
            <div class="shadow p-4"> <!-- Each comment is a div-->
                <h6>{{this.fullname}} {{this.rate}}‚≠ê</h6>
                <p>{{this.feedback}}</p>
            </div>
            {{/each}}
        </div>
    </div>
</div>
