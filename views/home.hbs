   <script>
        $(document).ready(function(){
           $('.owl-carousel').owlCarousel({
                loop:false,
                margin:15,
                nav:true,
                responsive:{
                    0:{
                        items:1
                    },
                    600:{
                        items:3
                    },
                    1000:{
                        items:5
                    }
                }
            })
        });
    </script>

    
<div style="width:90%; margin: 0 auto;">
